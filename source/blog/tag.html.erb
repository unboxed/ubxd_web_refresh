---
pageable: true
per_page: 30
blog: 'blog'
---
<% add_atom_feed_to_head %>
<% content_for(:title) { "Blog - #{tagname}" } %>

<div class="blog-header">
  <div class="blog-header__container">
    <h1 class="blog-header__page-title">
      <a class="blog-header__breadcrumb" href="/blog">Blog</a> / <%= tagname %>
    </h1>
  </div>
</div>

<div class="blog-grid-tags blog-tags">
  <div class="blog-tags__container">
    <% data.tags.each do |tag| %>
      <a class="blog-tags__tag<%= " blog-tags__tag--active" if tagname == tag %>"
        href="<%= tag_path(tag, :blog) %>"><%= tag %></a>
    <% end %>
  </div>
</div>

<%= partial 'blog_grid', locals: { articles: page_articles } %>

<%= partial 'blog_pagination' %>
