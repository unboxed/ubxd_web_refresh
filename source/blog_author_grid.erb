<% add_atom_feed_to_head %>
<% content_for(:title) { "Blog - Posts by #{author_name}" } %>

<div class="blog-header">
  <div class="blog-header__container">
    <h1 class="blog-header__page-title">
      <a class="blog-header__breadcrumb" href="/blog">Blog</a> / <%= author_name %>
    </h1>
  </div>
</div>

<%= partial 'blog_grid', locals: { articles: blog(:blog).articles.select { |article| article.data.authors.include? author_name } } %>
