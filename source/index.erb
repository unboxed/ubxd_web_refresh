<div class="homepage">
  <div class="homepage-header">
    <div class="homepage-header__text">
      <%= Tilt['markdown'].new { current_page.data.header_text }.render %>
    </div>
  </div>

  <div class="homepage-services" data-header-waypoint>
    <h2 class="homepage-services__title">
      <%= current_page.data.services.title %>
    </h2>

    <% current_page.data.services.content.each do |service| %>
      <div class="homepage-services__service">
        <div class="homepage-service">
          <h3 class="homepage-service__title">
            <%= service.title %>
          </h3>
          <%= image_tag service.image, alt: service.title, class: "homepage-service__image", srcset: retina_srcset(service.image) %>
          <p class="homepage-service__paragraph">
            <%= service.text %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="homepage-additional-services">
    <h2 class="homepage-additional-services__title">
      <%= current_page.data.additional_services.title %>
    </h2>

    <% current_page.data.additional_services.content.each do |service| %>
      <div class="homepage-additional-services__service">
        <div class="homepage-service homepage-service--white">
          <h3 class="homepage-service__title">
            <%= service.title %>
          </h3>
          <p class="homepage-service__paragraph">
            <%= service.text %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="homepage-latest">
    <h2 class="homepage-latest__title">
      <%= current_page.data.projects.title %>
    </h2>

    <% current_page.data.projects.content.each do |project| %>
      <a class="homepage-tile" href="<%= project.link %>">
        <div class="homepage-tile__content">
          <img class="homepage-tile__image" src="<%= project.image %>" alt="<%= project.name %>">

          <h3 class="homepage-tile__title">
            <%= project.name %>
          </h3>

          <p class="homepage-tile__paragraph">
            <%= project.description %>
          </p>
        </div>
      </a>
    <% end %>
  </div>

  <div class="homepage-contact">
    <div class="homepage-contact__container">
      <h2 class="homepage-contact__title">
        <%= current_page.data.contact.title %>
      </h2>

      <%= image_tag "/assets/images/homepage/contact--mobile.jpg", alt: current_page.data.contact.image_description, class: "homepage-contact__image", srcset: "/assets/images/homepage/contact--mobile@2x.jpg 2x" %>

      <p class="homepage-contact__paragraph">
        <%= current_page.data.contact.text %>
      </p>

      <form class="homepage-contact-form" action="//formspree.io/<%= current_page.data.contact.email %>" method="POST">
        <p class="homepage-contact-form__to-disabled-input" data-to="<%= current_page.data.contact.display_email %>"></p>
        <input type="text" name="_gotcha" style="display:none" />
        <input type="hidden" name="_subject" value="<%= current_page.data.contact.email_subject %>" />
        <input class="homepage-contact-form__email-input" type="email" name="_replyto" placeholder="your email" required />
        <textarea class="homepage-contact-form__message-input" name="comment" placeholder="message" required></textarea>
        <input class="homepage-contact-form__send-button" type="submit" value="send">
      </form>
    </div>
  </div>

  <div class="homepage-latest">
    <h2 class="homepage-latest__title">
      <%= current_page.data.blog_title %>
    </h2>

    <% blog.articles.reject { |article| article.data.weekly_roundup? }.first(3).each do |article| %>
      <a class="homepage-blog-tile" href="<%= article.url %>">
        <div class="homepage-blog-tile__content">
          <div class="homepage-blog-tile__title">
            <%= truncate(article.title, length: 70) %>
          </div>

          <div>
            <div class="homepage-blog-tile__author">
              <%= article.data.author %>
            </div>

            <div class="homepage-blog-tile__date">
              <%= Time.parse(article.data.date).strftime("%B %e, %Y") %>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
