<div class="homepage">
  <header class="homepage-header">
    <h1 class="homepage-header__text">
      We're Unboxed. We <strong>collaborate</strong> to grow your ideas for digital products. Then we <strong>build</strong> them. We can also improve the way your organisation works.<br><br>
      We do this through <strong>agile</strong> and <strong>lean</strong> techniques, using <strong>Ruby on Rails</strong>.
    </h1>
  </header>

  <section class="services" data-header-waypoint>
    <h2 class="services__title">
      <%= current_page.data.services.title %>
    </h2>
    <% current_page.data.services.content.each do |service| %>
      <div class="services-container__service">
        <div class="service">
          <h3 class="service__title">
            <%= service.title %>
          </h3>
          <%= image_tag service.image, alt: service.title, class: "service__image", srcset: retina_srcset(service.image) %>
          <p class="service__paragraph">
            <%= service.text %>
          </p>
        </div>
        <div class="service__button-container">
          <a class="service__button" href=<%= service.link %>
           onClick="sendToGaHomePageServiceClickEvent('<%= service.title %>');">
            Learn more
          </a>
        </div>
      </div>
    <% end %>
  </section>

  <%= partial 'showcase_tiles_section' , locals: current_page.data.products %>

  <section class="homepage-contact">
    <div class="homepage-contact__container">
      <h2 class="homepage-contact__title">
        <%= current_page.data.contact.title %>
      </h2>

      <%= image_tag "/assets/images/homepage/contact--mobile.jpg", alt: current_page.data.contact.image_description, class: "homepage-contact__image", srcset: "/assets/images/homepage/contact--mobile@2x.jpg 2x" %>

      <p class="homepage-contact__paragraph">
        <%= current_page.data.contact.text %>
      </p>

      <form class="homepage-contact-form" id="contact-form" action="//formspree.io/<%= current_page.data.contact.email %>" method="POST" data-required-form>
        <p class="homepage-contact-form__to-disabled-input" data-to="<%= current_page.data.contact.display_email %>"></p>
        <input type="text" name="_gotcha" style="display:none" />
        <input type="hidden" name="_next" value="/#contact-form" />
        <input type="hidden" name="_subject" value="<%= current_page.data.contact.email_subject %>" />
        <input class="homepage-contact-form__email-input" type="email" name="_replyto" placeholder="Your email" required />
        <textarea class="homepage-contact-form__message-input" name="comment" placeholder="Message" required></textarea>
        <input class="homepage-contact-form__send-button" type="submit" value="Send">
      </form>

      <div class="homepage-contact-form__acknowledgement">
        <%= current_page.data.contact.acknowledgement %>
      </div>

      <script>
        document.querySelector('[data-required-form]').onsubmit = function (event) {
          var elements = this.querySelectorAll('[required]');
          for (var i = 0; i < elements.length; i++) {
            if (elements[i].value === '' || elements[i].value === elements[i].placeholder) {
              elements[i].classList.add('error');
              event.preventDefault ? event.preventDefault() : (window.event.returnValue = false);
            } else {
              elements[i].classList.remove('error');
            }
          }
        };
      </script>
    </div>
  </section>

  <section class="homepage-newsletter">
    <h2 class="homepage-newsletter__title">
      <%= current_page.data.newsletter.title %>
    </h2>

    <p class="homepage-newsletter__paragraph">
      <%= current_page.data.newsletter.text %>
    </p>

    <%= partial 'newsletter', locals: { block_class: 'homepage-newsletter', onclick_function: 'sendToGaHomePageSubscribeClickEvent()' } %>
  </section>

  <section class="showcase-tiles-section">
    <h2 class="showcase-tiles-section__title">
      <%= current_page.data.blog_title %>
    </h2>

    <% blog(:blog).articles.reject { |article| article.data.weekly_roundup? }.first(6).each do |article| %>
      <a class="small-tile" href="<%= article.url %>" title="<%= article.title %>">
        <div class="small-tile__content">
          <div class="small-tile__title">
            <%= truncate(article.title, length: 70) %>
          </div>

          <div>
            <div class="small-tile__author">
              <%= article_info(data.people, article.data).author_names %>
            </div>

            <div class="small-tile__date">
              <%= Time.parse(article.data.date).strftime("%B %e, %Y") %>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </section>
</div>

