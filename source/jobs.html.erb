<header class="page-header page-header--bottom-margin">
  <div class="page-header__container">
    <h1 class="page-header__title">
      <%= current_page.data.header.title %>
    </h1>
  </div>
</header>

<div class="container" data-header-waypoint>
  <section class="component">
    <div class="text-tile--full-width">
      <h2 class="text-tile__title">
        <%= current_page.data.introduction.title %>
      </h2>

      <p class="text-tile__paragraph--with-spacing">
        <%= current_page.data.introduction.text_1 %>
      </p>
      <p class="text-tile__paragraph--with-spacing">
        <%= current_page.data.introduction.text_2 %>
      </p>
    </div>
  </section>

  <%= partial 'shared/full_image', locals: current_page.data.unboxed_meeting_image %>

  <section class="roles">
    <% if current_page.data.roles.content.nil? %>
      <h2 class="roles__title">
        No current vacancies
      </h2>
      <p class="roles-tile__no-roles-paragraph">
        We don't currently have any team openings.
      </p>
    <% else %>
      <h2 class="roles__title">
        <%= current_page.data.roles.title %>
      </h2>
      <% if current_page.data.roles.content.length == 1 %>
        <% role = current_page.data.roles.content[0] %>
            <a class="roles-tile__content-single" href="<%= role.link %>" title="<%= role.name %>">
                <div class="component__tile roles-tile__text-single" >
                  <h3 class="roles-tile__title">
                    <%= role.name %>
                  </h3>
                  <p class="roles-tile__paragraph">
                    <%= role.text %>
                  </p>
                </div>
                <div class="roles-tile__image-container">
                  <%= image_tag role.image, alt: role.name, class: "roles-tile__image", srcset: retina_srcset(role.image) %>
                </div>
            </a>
      <% else %>
        <div class="roles-tiles">
          <% current_page.data.roles.content.each do |role| %>
              <!--we need to have this extra class to Safari bug - it's overriding anchor color and makes a border purple in the nested element-->
              <a class="roles-tile--linked" href="<%= role.link %>" title="<%= role.name %>">
                <div class="roles-tile__content">
                  <%= image_tag role.image, alt: role.name, class: "roles-tile__image", srcset: retina_srcset(role.image) %>
                  <h3 class="roles-tile__title">
                    <%= role.name %>
                  </h3>
                  <p class="roles-tile__paragraph">
                    <%= role.text %>
                  </p>
                </div>
              </a>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </section>

  <section class="component">
    <div class="component__tile text-tile">
      <h2 class="text-tile__title">
        <%= current_page.data.offer.title %>
      </h2>

      <ul class="text-tile__list">
        <% current_page.data.offer.incentives.each do |incentive| %>
          <li class="text-tile__list-item">
            <%= incentive %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="component__tile image-tile">
      <%= image_tag current_page.data.offer.image, alt: current_page.data.offer.image_description, class: "image-tile__image", srcset: retina_srcset(current_page.data.offer.image) %>
    </div>
  </section>

  <%= partial 'shared/quote_caricature', locals: current_page.data.alumni_quote %>

  <%= partial 'jobs/contact_us', locals: { roles_count: current_page.data.roles.content.length } %>

  <%= partial 'shared/related_tiles' %>
</div>
