<div class="page-header">
  <div class="page-header__container">
    <div class="page-header__title">
      Project Stories
    </div>
  </div>
</div>

<div class="container" id="siteHeaderWaypoint">
  <% current_page.data.project_stories.each_with_index do |project_story, index| %>
    <% class_name = index == 0 ? "grid-large-tile" : "grid-tile" %>
    <a class="<%= class_name %>" href="<%= project_story.link %>">
      <img class="<%= class_name %>__image" src="<%= project_story.image %>" alt="<%= project_story.client %>">
      <div class="<%= class_name %>__content">
        <div class="<%= class_name %>__title">
          <%= project_story.title %>
        </div>
        <div class="<%= class_name %>__client">
          <%= project_story.client %>
        </div>
      </div>
    </a>
  <% end %>
</div>

<script>
new Waypoint({
  element: $('#siteHeaderWaypoint'),
  handler: function(direction) {
    var siteHeader = $('.site-header');
    if (direction === 'down') {
      siteHeader.addClass('site-header--active-scroll');
    } else {
      siteHeader.removeClass('site-header--active-scroll');
    }
  },
  offset: 54
});
</script>
