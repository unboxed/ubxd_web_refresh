<header class="page-header page-header--bottom-margin">
  <div class="page-header__container">
    <h1 class="page-header__title">
      <%= current_page.data.title %>
    </h1>
  </div>
</header>

<div class="container--grid" data-header-waypoint>
  <% current_page.data.project_stories.each_with_index do |project_story, index| %>
    <% class_name = index == 0 ? "project-story-large-tile" : "project-story-small-tile" %>
    <a class="<%= class_name %>" href="<%= project_story.link %>">
      <div class="<%= class_name %>__container">
        <%= image_tag project_story.image, alt: project_story.client, class: "#{class_name}__image", srcset: retina_srcset(project_story.image) %>
        <div class="<%= class_name %>__content">
          <div class="<%= class_name %>__client"><%= project_story.client %></div>
          <div class="<%= class_name %>__title"><%= project_story.title %></div>
        </div>
      </div>
    </a>
  <% end %>
</div>

<header class="blog-header">
  <div class="blog-header__container">
    <h1 class="blog-header__page-title">
      Side Projects
    </h1>
  </div>
</header>

<div class="container--grid" data-header-waypoint>
  <% current_page.data.side_projects.each_with_index do |side_project, index| %>
    <a class="project-story-small-tile" href="<%= side_project.link %>">
      <div class="project-story-small-tile__container">
        <%= image_tag side_project.image, alt: side_project.title, class: "project-story-small-tile__image", srcset: retina_srcset(side_project.image) %>
        <div class="project-story-small-tile__content">
