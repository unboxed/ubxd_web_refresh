<section class="project-team">
  <h2 class="project-team__title">
    <%= current_page.data.team.title %>
  </h2>

  <% team_size = current_page.data.team.people.size %>

  <% current_page.data.team.people.each do |person| %>
    <% if person.link %>
      <a class="project-team__headshot-container project-team__container--<%= team_size %>" href="<%= person.link %>">
        <img class="project-team__headshot project-team__<%= person.short_name %>" src="<%= person.image %>" alt="<%= person.full_name %>" title="<%= person.full_name %>">
      </a>
    <% else %>
      <div class="project-team__headshot-container project-team__container--<%= team_size %>">
        <img class="project-team__headshot project-team__<%= person.short_name %>" src="<%= person.image %>" alt="<%= person.full_name %>" title="<%= person.full_name %>">
      </div>
    <% end %>
  <% end %>
</section>
