<header class="page-header">
  <div class="page-header__container">
    <h1 class="page-header__title">
      <%= current_page.data.header.introduction %>
    </h1>

    <p class="page-header__client">
      <%= current_page.data.header.client %>
    </p>
  </div>
</header>

<div class="container">
  <img class="full-image" <%= retina_src current_page.data.header.image %> id="siteHeaderWaypoint" alt="<%= current_page.data.header.image_description %>" />

  <script>
    new Waypoint({
      element: $('#siteHeaderWaypoint'),
      handler: function(direction) {
        var siteHeader = $('.site-header');
        if (direction === 'down') {
          siteHeader.addClass('site-header--active-scroll');
        } else {
          siteHeader.removeClass('site-header--active-scroll');
        }
      },
      offset: 54
    });
  </script>

  <section class="component">
    <div class="component__tile text-tile">
      <ul class="text-tile__list">
        <% current_page.data.partnership.results.each do |result| %>
          <li><%= render_markdown(result) %></li>
        <% end %>
      </ul>
    </div>

    <div class="component__tile image-tile">
      <img class="image-tile__image" <%= retina_src current_page.data.partnership.image %> alt="<%= current_page.data.partnership.image_description %>" />
    </div>
  </section>

  <section class="highlight--dark-gray">
    <h2 class="highlight__title--white">
      <%= current_page.data.statistics_1.title %>
    </h2>

    <div class="highlight__tile--one">
      <p class="highlight__large-text"><i class="fa fa-arrow-up large-arrow"></i><%= current_page.data.statistics_1.number %><p>
      <p class="highlight__small-text"><%=current_page.data.statistics_1.text %></p>
    </div>
  </section>


  <section class="component">
    <div class="component__tile text-tile">
      <h2 class="text-tile__title">
        <%= current_page.data.introduction.title %>
      </h2>

      <p class="text-tile__paragraph">
        <%= current_page.data.introduction.content %>
      </p>
    </div>

    <div class="component__tile image-tile">
      <img class="image-tile__image" <%= retina_src current_page.data.introduction.image %> alt="<%= current_page.data.introduction.image_description %>" />
    </div>
  </section>

  <blockquote class="quote">
    <p class="quote__text">
      <%= current_page.data.project_quote.quote %>
    </p>
    <p class="quote__source">
      <%= current_page.data.project_quote.source %>
    </p>
  </blockquote>

  <section class="component">
    <div class="component__tile text-tile">
      <h2 class="text-tile__title">
        <%= current_page.data.agile.title %>
      </h2>

      <p class="text-tile__paragraph">
        <%= current_page.data.agile.content %>
      </p>
    </div>

    <div class="component__tile image-tile">
      <img class="image-tile__image" <%= retina_src current_page.data.agile.image %> alt="<%= current_page.data.agile.image_description %>" />
    </div>
  </section>

  <section class="highlight--dark-gray">
    <div class="highlight__tile--two">
      <p class="highlight__large-text"><i class="fa fa-arrow-up large-arrow"></i><%= current_page.data.statistics_2.number %><p>
      <p class="highlight__small-text"><%=current_page.data.statistics_2.text %></p>
      <p class="highlight__large-text"><i class="fa fa-arrow-up large-arrow"></i><%= current_page.data.statistics_3.number %><p>
      <p class="highlight__small-text"><%=current_page.data.statistics_3.text %></p>
    </div>
  </section>

  <section class="component">
    <div class="component__tile text-tile">
      <h2 class="text-tile__title">
        <%= current_page.data.collaboration.title %>
      </h2>

      <p class="text-tile__paragraph">
        <%= current_page.data.collaboration.content %>
      </p>
    </div>

    <div class="component__tile image-tile">
      <img class="image-tile__image" <%= retina_src current_page.data.collaboration.image %> alt="<%= current_page.data.collaboration.image_description %>" />
    </div>
  </section>

  <blockquote class="quote">
    <p class="quote__text">
      <%= current_page.data.release_quote.quote %>
    </p>
    <p class="quote__source">
      <%= current_page.data.release_quote.source %>
    </p>
  </blockquote>

  <section class="component">
    <div class="component__tile text-tile">
      <h2 class="text-tile__title">
        <%= current_page.data.objectives.title %>
      </h2>

      <p class="text-tile__paragraph">
        <%= current_page.data.objectives.content %>
      </p>
    </div>

    <div class="component__tile image-tile">
      <img class="image-tile__image" <%= retina_src current_page.data.objectives.image %> alt="<%= current_page.data.objectives.image_description %>" />
    </div>
  </section>

  <blockquote class="quote">
    <p class="quote__text">
      <%= current_page.data.team_quote.quote %>
    </p>
    <p class="quote__source">
      <%= current_page.data.team_quote.source %>
    </p>
  </blockquote>

  <section class="project-team">
    <h2 class="project-team__title">
      <%= current_page.data.team.title %>
    </h2>

    <% current_page.data.team.people_active.each do |person| %>
      <a class="project-team__headshot-container project-team__container--6" href="<%= person.link %>">
        <img class="project-team__headshot project-team__<%= person.short_name %>" src="/project-stories/contiki/team/<%= person.short_name %>.png" alt="<%= person.full_name %>" title="<%= person.full_name %>">
      </a>
    <% end %>

    <% current_page.data.team.people_archived.each do |person| %>
      <div class="project-team__headshot-container project-team__container--6">
        <img class="project-team__headshot project-team__<%= person.short_name %>" src="/project-stories/contiki/team/<%= person.short_name %>.png" alt="<%= person.full_name %>" title="<%= person.full_name %>">
      </div>
    <% end %>
  </section>

  <section class="highlight--dark-gray">
    <h2 class="highlight__title--white">
      <%= current_page.data.objectives_outcomes.title %>
    </h2>

    <ul class="highlight__list--bulleted">
      <% current_page.data.objectives_outcomes.objectives.each do |objective| %>
        <li class="highlight__list-item--white">
          <%= render_markdown(objective) %>
          <span>Objective met</span>
        </li>
      <% end %>
      <ul class="highlight__list--bulleted-one-column">
        <% current_page.data.objectives_outcomes.objective_smashed.each do |objective| %>
          <li class="highlight__list-item--white">
            <%= render_markdown(objective) %>
            <span>Objective smashed!</span>
          </li>
        <% end %>
      </ul>
    </ul>
  </section>

  <section class="component">
    <a class="link-tile link-tile--site-link" href="<%= current_page.data.site.link %>" target="_blank">
      <div>
        <div class="link-tile__type">
          link
        </div>
        <div class="link-tile__title">
          <%= current_page.data.site.text %>
        </div>
      </div>
    </a>
    <% current_page.data.links.each do |link| %>
      <a class="link-tile" href="<%= link.link %>" target="_blank">
        <div>
          <div class="link-tile__type">
            <%= link.type %>
          </div>
          <div class="link-tile__title">
            <%= link.title %>
          </div>
        </div>
        <div class="link-tile__source">
          <%= link.source %>
        </div>
      </a>
    <% end %>
  </section>

  <footer class="component">
    <div class="footer-introduction">
      <h3 class="footer-introduction__title">
        <%= current_page.data.related.title %>
      </h3>
    </div>

    <% current_page.data.related.articles.each do |article| %>
      <a class="related-tile" href="<%= article.link %>">
        <img class="related-tile__image" src="<%= article.image %>" alt="<%= article.type %>">
        <div class="related-tile__text-content">
          <div>
            <div class="related-tile__type">
              <%= article.type %>
            </div>
            <div class="related-tile__title">
              <%= article.title %>
            </div>
          </div>
        </div>
      </a>
    <% end %>

    <section class="footer-social-icons">
      <div>
        <a class="social-icons__icon-container" href="http://twitter.com/Ubxd" target="_blank">
          <div class="social-icons__icon">
            <%= image_tag 'twitter.png', class: 'social-icons__image', alt: 'Twitter' %>
          </div>
        </a>
        <a class="social-icons__icon-container" href="https://www.facebook.com/pages/Unboxed-Consulting/114802528557320" target="_blank">
          <div class="social-icons__icon">
            <%= image_tag 'facebook.png', class: 'social-icons__image', alt: 'Facebook' %>
          </div>
        </a>
        <a class="social-icons__icon-container" href="http://www.linkedin.com/company/unboxed-consulting" target="_blank">
          <div class="social-icons__icon">
            <%= image_tag 'linkedin.png', class: 'social-icons__image', alt: 'LinkedIn' %>
          </div>
        </a>
      </div>
    </section>
  </footer>
</div>
