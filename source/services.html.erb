---
<header class="page-header page-header--bottom-margin">
  <div class="page-header__container">
    <h1 class="page-header__title">
      <%= current_page.data.title %>
    </h1>
  </div>
</header>

<div class="container">
  <section class="services" data-header-waypoint>
    <p class="services__introduction">
      <%= current_page.data.services.introduction %>
    </p>
    <% current_page.data.services.content.each do |service| %>
      <div class="services-container__service">
        <div class="services-page-service">
          <div class="service__image-container">
            <div class="service__image-wrapper">
              <%= link_to image_tag(service.image, alt: service.title, class: "service__image", srcset: retina_srcset(service.image)), service.link %>
            </div>
          </div>
          <h3 class="service__title">
            <%= service.title %>
          </h3>
          <p class="service__paragraph">
            <%= service.text %>
          </p>
        </div>
          <div class="service__button-container">
            <a class="service__button" href=<%= service.link %>
             onClick="sendToGaHomePageServiceClickEvent('<%= service.title %>');">
              Learn more
            </a>
          </div>
      </div>
    <% end %>
  </section>
  <section class="component">
    <div class="services-page-text-tile">
      <h2 class="text-tile__title">
        <%= current_page.data.approach.title %>
      </h2>

      <p class="text-tile__paragraph--with-spacing">
        <%= current_page.data.approach.text %>
      </p>
    </div>
  </section>
  <div class="diagram-container">
    <%= image_tag current_page.data.approach.image, alt: "Approach diagram", class: "diagram", srcset: retina_srcset(current_page.data.approach.image)  %>
  </div>
  <blockquote class="services-page-quote">
    <p class="services-page-quote__text">
      <%= current_page.data.quote.text %>
    </p>
    <p class="services-page-quote__source">
      <%= current_page.data.quote.source %>
    </p>
  </blockquote>
</div>

<%= partial 'book_meeting' %>
